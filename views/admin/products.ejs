<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Gestion des Produits</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow">
        <h1 class="text-2xl font-bold mb-4">Gestion des Produits</h1>
        <a href="/admin/products/new" class="bg-blue-600 text-white px-4 py-2 rounded mb-4 inline-block">Ajouter un nouveau produit</a>
        <a href="/admin/home" class="text-blue-500 hover:text-blue-700 ml-4">&larr; Tableau de bord</a>
        
        <div class="space-y-4 mt-4">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="flex items-center justify-between p-4 border rounded-md bg-gray-50">
                        <% if (product.image) { %>
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="w-16 h-16 object-cover rounded-md mr-4">
                        <% } else { %>
                            <div class="w-16 h-16 bg-gray-300 flex items-center justify-center rounded-md mr-4 text-xs text-gray-500">
                                No Image
                            </div>
                        <% } %>
                        
                        <div class="flex-grow">
                            <h3 class="font-bold"><%= product.name %></h3>
                            <p class="text-gray-600">Prix: <%= product.price %>€</p>
                        </div>
                        <div class="space-x-2">
                            <a href="/admin/products/<%= product._id %>/edit" class="text-yellow-500 hover:underline">Modifier</a>
                            <form action="/products/admin/products/<%= product._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Supprimer ce produit ?');">
                                <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-gray-500">Aucun produit trouvé.</p>
            <% } %>
        </div>
    </div>
</body>
</html>