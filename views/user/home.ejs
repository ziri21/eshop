<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Accueil Utilisateur</title>
    <link href="/css/output.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow p-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">E-commerce</h1>
        <nav class="space-x-4">
            <a href="/user/cart" class="text-blue-500 hover:text-blue-700">Panier</a>
            <a href="/user/profile" class="text-blue-500 hover:text-blue-700">Mon profil</a>
            <a href="/logout" class="text-red-500 hover:text-red-700">Déconnexion</a>
        </nav>
    </header>

    <main class="p-6 max-w-7xl mx-auto">
        <% if (products && products.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% products.forEach(p => { %>
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
                        <% if (p.image) { %>
                            <img src="<%= p.image %>" alt="<%= p.name %>" class="w-full h-48 object-cover">
                        <% } else { %>
                            <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500">
                                Aucune image
                            </div>
                        <% } %>
                        <div class="p-4 flex flex-col flex-grow">
                            <h2 class="font-bold text-lg mb-1"><%= p.name %></h2>
                            <p class="text-gray-600 text-sm mb-3 line-clamp-3"><%= p.description || "" %></p>
                            <div class="mt-auto pt-2">
                                <p class="font-semibold text-xl text-blue-600"><%= p.price %> €</p>
                                <a href="/user/product/<%= p._id %>" class="mt-4 w-full inline-block text-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300">
                                    Voir détails
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center text-gray-500">Aucun produit n'est disponible pour le moment.</p>
        <% } %>
    </main>
</body>
</html>